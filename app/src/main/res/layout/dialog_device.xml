<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_lbl_name"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_toEndOf="@id/tv_lbl_name"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@id/tv_lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_lbl_mac"
        android:layout_below="@id/tv_lbl_name"
        android:layout_marginTop="4dp"
        android:layout_alignStart="@id/tv_lbl_name"
        android:text="@string/mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_mac"
        android:layout_alignBaseline="@id/tv_lbl_mac"
        android:layout_alignStart="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_uuids"
        android:layout_below="@id/tv_lbl_mac"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>